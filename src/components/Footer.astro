---
import { CONFIG } from "../config";
---

<footer
  class="border-t border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-900"
>
  <div class="mx-auto max-w-4xl px-4 py-12">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <!-- Brand -->
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <div
            class="h-8 w-8 rounded-lg bg-primary-600 flex items-center justify-center"
          >
            <span class="text-white font-bold text-lg">M</span>
          </div>
          <span class="text-xl font-bold text-gray-900 dark:text-white">
            {CONFIG.name}
          </span>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400 max-w-xs">
          {CONFIG.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider"
        >
          Quick Links
        </h3>
        <ul class="space-y-2">
          {
            CONFIG.links.map((link) => (
              <li>
                <a
                  href={link.link}
                  class="text-sm text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors duration-200"
                >
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Social Links -->
      <div class="space-y-4">
        <h3
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider"
        >
          Connect
        </h3>
        <div class="flex space-x-4">
          {
            CONFIG.socials.map((social) => (
              <a
                href={social.link}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={social.ariaLabel || social.text}
                class="text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors duration-200"
              >
                <span class="sr-only">{social.text}</span>
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  {social.icon === "mdi:github" && (
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  )}
                  {social.icon === "mdi:linkedin" && (
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  )}
                  {social.icon === "mdi:email" && (
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
                  )}
                </svg>
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mt-8 border-t border-gray-200 pt-8 dark:border-gray-700">
      <div
        class="flex flex-col items-center justify-between space-y-4 md:flex-row md:space-y-0"
      >
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Â© {new Date().getFullYear()}
          {CONFIG.name}. All rights reserved.
        </p>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Built with <a
            href="https://astro.build"
            class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
            >Astro</a
          >
        </p>
      </div>
    </div>
  </div>
</footer>
