---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, BASE_URL } from '../consts';
---

<header>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href=`${BASE_URL}/`>Home</HeaderLink>
		<HeaderLink href=`${BASE_URL}/blog`>Blog</HeaderLink>
		<HeaderLink href=`${BASE_URL}/about`>About</HeaderLink>
		<HeaderLink href="https://github.com/MinaSameh1" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
