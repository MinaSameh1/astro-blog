---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import BlogList from "../../components/BlogList.astro";
import "../../styles/global.css";

const posts = await getCollection("blog");

const sortedPosts = [...posts].sort(
  (a, b) => new Date(b?.data?.pubDate).getTime() - new Date(a?.data?.pubDate).getTime()
);

---

<html lang="en">
  <head>
    <BaseHead title="Blog" description="Read my thoughts on technology, development, and anything that catches my eye." />
  </head>
  <body>
    <Header />
    <main>
      <!-- Hero -->
      <section class="relative bg-gradient-to-br from-primary-50 to-blue-50 dark:from-gray-900 dark:to-gray-800 py-20">
        <div class="mx-auto max-w-4xl px-4 text-center">
          <h1 class="mb-6 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">Blog</h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Thoughts and insights on technology, development, and anything that catches my eye
          </p>
        </div>
      </section>

      <!-- Grid -->
      <section class="py-20 bg-white dark:bg-gray-900">
        <div class="mx-auto max-w-6xl px-4">
          {sortedPosts.length > 0 ? (
              <BlogList posts={sortedPosts} />
          ) : (
            <div class="text-center py-20">
              <div class="h-24 w-24 mx-auto mb-6 bg-gray-200 dark:bg-gray-700 rounded-full flex items-center justify-center">
                <svg class="h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No blog posts yet</h3>
              <p class="text-gray-600 dark:text-gray-300">I'm working on some great content. Check back soon!</p>
            </div>
          )}
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
