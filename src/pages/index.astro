---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { CONFIG } from "../config";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <BaseHead />
  </head>
  <body>
    <Header />

    <main>
      <!-- Hero Section -->
      <section
        class="relative bg-gradient-to-br from-primary-50 to-blue-50 dark:from-gray-900 dark:to-gray-800 py-20"
      >
        <div class="mx-auto max-w-4xl px-4 text-center">
          <div class="mb-8">
            <div
              class="mx-auto mb-6 h-24 w-24 rounded-full bg-primary-600 flex items-center justify-center"
            >
              <span class="text-white font-bold text-4xl">M</span>
            </div>
          </div>

          <h1
            class="mb-6 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl"
          >
            Hi, I'm <span class="text-primary-600 dark:text-primary-400"
              >{CONFIG.name}</span
            >
          </h1>

          <p
            class="mb-8 text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto"
          >
            {CONFIG.description}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/portfolio"
              class="btn btn-primary px-8 py-3 text-lg font-semibold"
            >
              View My Work
            </a>
            <a
              href="/about"
              class="btn btn-secondary px-8 py-3 text-lg font-semibold"
            >
              Learn More
            </a>
          </div>
        </div>
      </section>

      <!-- Skills Section -->
      <section class="py-20 bg-white dark:bg-gray-900">
        <div class="mx-auto max-w-4xl px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              Skills & Technologies
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              Here are the technologies I work with
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
              CONFIG.skills.map((skill) => (
                <div class="card bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200">
                  <div class="flex items-center justify-between mb-2">
                    <h3 class="font-semibold text-lg text-gray-900 dark:text-white">
                      {skill.name}
                    </h3>
                    <span class="text-xs px-2 py-1 rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
                      {skill.category}
                    </span>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- Featured Projects Section -->
      <section class="py-20 bg-gray-50 dark:bg-gray-800">
        <div class="mx-auto max-w-4xl px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              Featured Projects
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              Some of my recent work
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
              CONFIG.projects.slice(0, 4).map((project) => (
                <div class="card group hover:shadow-lg transition-shadow duration-300">
                  <div class="aspect-video bg-gray-200 dark:bg-gray-700 rounded-lg mb-4 overflow-hidden">
                    <img
                      src={project.image}
                      alt={project.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>

                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                    {project.title}
                  </h3>

                  <p class="text-gray-600 dark:text-gray-300 mb-4">
                    {project.description}
                  </p>

                  <div class="flex flex-wrap gap-2 mb-4">
                    {project.tech.map((tech) => (
                      <span class="px-3 py-1 bg-primary-100 text-primary-800 dark:bg-primary-900 dark:text-primary-200 text-sm rounded-full">
                        {tech}
                      </span>
                    ))}
                  </div>

                  <div class="flex gap-3">
                    {project.link && (
                    <a
                      href={project.link}
                      class="btn btn-primary px-4 py-2 text-sm"
                    >
                      View Project
                    </a>
                    )}
                    {project.github && (
                      <a
                        href={project.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-secondary px-4 py-2 text-sm"
                      >
                        GitHub
                      </a>
                    )}
                  </div>
                </div>
              ))
            }
          </div>

          <div class="text-center mt-12">
            <a
              href="/portfolio"
              class="btn btn-primary px-8 py-3 text-lg font-semibold"
            >
              View All Projects
            </a>
          </div>
        </div>
      </section>

      <!-- Latest Blog Posts Section -->
      <section class="py-20 bg-white dark:bg-gray-900">
        <div class="mx-auto max-w-4xl px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              Latest Blog Posts
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              some ramblings on programming
            </p>
          </div>

          <div class="text-center">
            <a
              href="/blog"
              class="btn btn-primary px-8 py-3 text-lg font-semibold"
            >
              Read My Blog
            </a>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
